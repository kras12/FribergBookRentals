@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<h1>@ViewData["Title"]</h1>
<div class="d-flex flex-column align-items-center gap-3">
    <div class="d-flex flex-column align-items-center gap-3 col-md-10 col-xxl-8">
        <div class="w-100">
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="d-flex flex-column gap-2">
                    <div class="d-flex flex-column">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="namn@example.com" />                        
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label asp-for="Input.Password" class="form-label">Lösenord</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="lösenord" />                        
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-row justify-content-center">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="d-flex flex-row justify-content-center">
                        <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Logga in</button>
                    </div>
                    <div class="text-center mt-4">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Glömt ditt lösenord?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrera som en ny användare</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Skicka om konfirmationen av email</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

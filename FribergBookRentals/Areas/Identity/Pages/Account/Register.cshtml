@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera nytt konto";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex flex-column align-items-center gap-3" >
    <div class="d-flex flex-column align-items-center gap-3 col-md-10 col-xxl-8">
        <div class="w-100">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="d-flex flex-column gap-2">
                    <div class="d-flex flex-column">
                        <label asp-for="Input.FirstName">Förnamn</label>
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="Förnamn" />                        
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label asp-for="Input.LastName">Efternamn</label>
                        <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="Efternamn" />                        
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label asp-for="Input.Email">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />                        
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label asp-for="Input.Password">Lösenord</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lösenord" />                        
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-column">
                        <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lösenord" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-row justify-content-center">
                        <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary">Registrera</button>
                    </div>                
                </div>
            </form>
        </div>        
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
